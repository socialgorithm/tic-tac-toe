{
  "name": "@socialgorithm/tic-tac-toe-game-server",
  "version": "8.2.1",
  "description": "Socialgorithm TicTacToe Game Server",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon",
    "dev": "tsc && ts-node -r tsconfig-paths/register --files src/index.ts",
    "start:opts": "tsc && ts-node bin/index.js",
    "build": "tsc -w",
    "test": "npm run lint && cross-env TS_NODE_FILES=true nyc mocha -r ts-node/register -r tsconfig-paths/register --recursive 'test/**/*.test.ts'",
    "lint": "tslint -p tsconfig.json -t stylish 'src/**/*.ts'",
    "docs": "typedoc --out docs/ --mode modules ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialgorithm/tic-tac-toe-game-server.git"
  },
  "keywords": [
    "socialgorithm",
    "tic",
    "tac",
    "toe",
    "tic-tac-toe",
    "game",
    "server"
  ],
  "author": "Socialgorithm",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">= 8"
  },
  "bin": {
    "uttt": "bin/index.js"
  },
  "bugs": {
    "url": "https://github.com/socialgorithm/tic-tac-toe-game-server/issues"
  },
  "homepage": "https://github.com/socialgorithm/tic-tac-toe-game-server#readme",
  "dependencies": {
    "@socialgorithm/game-server": "^8.2.0",
    "@socialgorithm/ultimate-ttt": "^4.19.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^5.0.5",
    "debug": "^4.1.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/node": "^12.0.7",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.1"
  }
}
